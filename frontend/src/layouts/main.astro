---
import { SEO } from "astro-seo";
import Container from "../components/layout/container.astro"
import Menu from "../components/menu/menu.astro";
import Heading from "../components/layout/Heading.astro";
import { ClientRouter } from "astro:transitions";
import "../index.css";
import Footer from "../components/layout/Footer.astro";
import LiquidGlass from "../components/LiquidGlass.astro";
import maisieImage from "../assets/img/maisie.jpeg";

const { title, frontmatter } = Astro.props

let pageTitle = title;
if (frontmatter) {
  pageTitle = frontmatter.title
}

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <ClientRouter />
    <SEO
      title=`${pageTitle} | maisieccino`
      description="A little corner of the internet where I share what I'm building and things I've taken photos of"
      openGraph={{
        basic: {
          title: pageTitle,
          type: "website",
          image: maisieImage.src,
        }
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.png" }],
      }}
    />
  </head>
  <body>
<LiquidGlass />
    <Container>
      <Heading title="maisieccino" transition:persist>
        <Menu>
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/coffee-map">Coffee Map</a>
          <a href="/photos">Photos</a>
          <a href="/blog">Blog</a>
        </Menu>
      </Heading>
      <slot transition:animate="slide"/>
      <Footer />
    </Container>
  </body>
</html>

