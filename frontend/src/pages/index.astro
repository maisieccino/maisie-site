---
import Main from "../layouts/main.astro";
import Bento from "../components/layout/bento.astro"
import BentoContainer from "../components/layout/bentoContainer.astro"
import LinkButton from "../components/button/LinkButton.astro";
import {compareDesc} from "date-fns"

import maisieImage from "../assets/img/maisie.jpeg";

import { getCollection } from "astro:content";
const posts = await getCollection("posts")
const latestPost = posts
  .sort((a,b) => compareDesc(a.data.publishedTime, b.data.publishedTime))[0]
---

<Main title="Home">
   <BentoContainer>
    <Bento>
      <p>Hello!</p>
      <p>I'm Maisie. Welcome to my little corner of the internet.</p>
    </Bento>
    <Bento image={maisieImage.src}>
    </Bento>
    <Bento title="Uses">
       <p>The tools I use!</p>
     <LinkButton href="/uses">Show me</LinkButton>
    </Bento>
    <Bento wide title="Latest blog post">
      <p>{latestPost?.data.title}</p>
      <LinkButton href=`/post/${latestPost.id}`>Read it now</LinkButton>
    </Bento>
    <Bento title="Photography">
      <p>Recent photos I've taken.</p>
      <LinkButton href="/photos">See more</LinkButton>
    </Bento>
    <Bento title="Links">
      <p>Cool links and cool people</p>
      <LinkButton href="/links">See 'em</LinkButton>
    </Bento>
    <Bento title="Coffee Map">
      <p>Sip and scroll, babey</p>
      <LinkButton href="/coffee-map">Find coffee</LinkButton>
    </Bento>
    <Bento title="AI Policy">
      <p>My use of LLM tools.</p>
      <LinkButton href="/ai-policy">Read it</LinkButton>
    </Bento>
   </BentoContainer>
</Main>
